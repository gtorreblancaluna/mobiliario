<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="MapperCompras">
  
    <resultMap id="resultMapCompra" type="model.Compra">        
        
        <result property="id" column="id"/>
        <result property="idArticulo" column="id_articulo"/>
        <result property="comentario" column="comentario"/>
        <result property="cantidad" column="cantidad"/>    
        <result property="precioCompra" column="precio_compra"/>
        <result property="creado" column="creado"/> 
        <result property="actualizado" column="actualizado"/> 
        <result property="fgActivo" column="fg_activo"/>
        
    </resultMap>   
  <select id="obtenerComprasPorArticuloId" parameterType="java.lang.Integer" resultMap="resultMapCompra">
      SELECT * FROM compras WHERE id_articulo = #{articuloId} AND fg_activo = '1'
  </select>
   
    <insert id="insertCompra" parameterType="model.Compra">
        INSERT INTO compras
        (
            id_articulo,
            comentario,
            cantidad,
            precio_compra,
            creado,
            actualizado
        )
        VALUES
        (
            #{idArticulo},
            #{comentario},
            #{cantidad},
            #{precioCompra},
            #{creado},
            #{actualizado}
        )
        
    </insert>
  
</mapper>