    private void btnGuardarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnGuardarActionPerformed
        
        
        try{
            
            if(!validateForm()){
                return;
            }
            
            Compra compra = new Compra();
            compra.setIdArticulo(articulo.getArticuloId());
            compra.setArticulo(articulo);
            compra.setComentario(this.txtComentario.getText());
            compra.setCantidad(new Float(this.txtCantidad.getText()));
            compra.setPrecioCompra(new Float(this.txtPrecioCompra.getText()));
            comprasService.insertCompra(compra);
            
            JOptionPane.showMessageDialog(null, ApplicationConstants.MESSAGE_SAVE_SUCCESSFUL, "", JOptionPane.INFORMATION_MESSAGE);
            this.dispose();
            
        }catch (NumberFormatException e){
            JOptionPane.showMessageDialog(null, "Error, al obtener cantidad o precio compra ", "Error", JOptionPane.ERROR_MESSAGE);
           
        }catch (Exception e){
            JOptionPane.showMessageDialog(null, "Error, ocurrio un error inesperado\n"+e, "Error", JOptionPane.ERROR_MESSAGE);
            
        }
        
        
    }//GEN-LAST:event_btnGuardarActionPerformed
       
     public boolean validateForm(){
         
         StringBuilder message = new StringBuilder();
         int cont = 0;
         
         if(this.txtCantidad.getText().equals("")){
             message.append(++cont);
             message.append(". Cantidad no puede ir vacio\n");
         }
         if(this.txtPrecioCompra.getText().equals("")){
             message.append(++cont);
             message.append(". Precio compra no puede ir vacio\n");
         }
       
         if(!message.toString().equals("")){
             JOptionPane.showMessageDialog(null, message.toString(), "Error", JOptionPane.ERROR_MESSAGE);
             return false;
         }else{
             return true;
         }  
     
     }
    
    
