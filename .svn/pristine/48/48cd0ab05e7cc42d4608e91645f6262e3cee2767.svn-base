    private void btnMostrarLimitActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnMostrarLimitActionPerformed
        
        Integer limit = null;
        if(this.radioLimit101.isSelected()){
            limit = 100;
        }else if(this.radioLimit1000.isSelected()){
            limit = 1000;
        }else if(this.radioLimitTodos.isSelected()){
            limit = null;
        }
        
        this.llenar_tabla_compras(limit);
        
    }//GEN-LAST:event_btnMostrarLimitActionPerformed
       
     public boolean validateForm(){
         
         StringBuilder message = new StringBuilder();
         int cont = 0;
         
         if(this.txtCantidad.getText().equals("")){
             message.append(++cont);
             message.append(". Cantidad no puede ir vacio\n");
         }
         if(this.txtPrecioCompra.getText().equals("")){
             message.append(++cont);
             message.append(". Precio compra no puede ir vacio\n");
         }
       
         if(!message.toString().equals("")){
             JOptionPane.showMessageDialog(null, message.toString(), "Error", JOptionPane.ERROR_MESSAGE);
             return false;
         }else{
             return true;
         }  
     
     }
    
    
