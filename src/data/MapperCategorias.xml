<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="MapperCategorias">
  
    <resultMap id="resultMapCategorias" type="common.model.CategoriaDTO">        
        <result property="categoriaId" column="id_categoria"/>
        <result property="descripcion" column="descripcion"/>       

    </resultMap>   
  
    <select id="obtenerCategorias" resultMap="resultMapCategorias" >
        SELECT * FROM categoria ORDER BY descripcion 
    </select>      
    
    
  
</mapper>