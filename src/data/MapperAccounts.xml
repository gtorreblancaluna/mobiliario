<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="MapperAccounts">
  
    <resultMap id="resultMapAccount" type="common.model.Cuenta">        
        
        <result property="id" column="cuenta_id"/>
        <result property="descripcion" column="descripcion"/>    
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/> 
        <result property="fgActivo" column="fg_activo"/>    
       

    </resultMap>   
  
    <select id="obtenerTipoAbonos" resultMap="resultMapAccount" >
        SELECT * FROM cuenta WHERE fg_activo = '1' ORDER BY descripcion
    </select>  
    
     <select id="getAccountByDescription" resultMap="resultMapAccount" parameterType="java.lang.String">
        SELECT * 
         FROM cuenta 
         WHERE fg_activo = '1' 
        AND descripcion = #{description}
    </select>  
    
    <select id="getAccounts" resultMap="resultMapAccount">
         SELECT * 
         FROM cuenta 
         WHERE fg_activo = '1' 
        
    </select> 
    <insert id="insertAccount" parameterType="common.model.Cuenta">
        INSERT INTO cuenta
        (
            descripcion,
            created_at
        )
        VALUES
        (
            #{descripcion},
            #{createdAt}
        )
        
    </insert>
  
</mapper>